{
  "hosting": {
    "public": "dist/track-it",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "predeploy": ["npm run lint", "npm run build -- --prod"],
    "rewrites": [
      {
        "source": "/api/data**",
        "function": "dataReceiver"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix functions run lint",
      "npm --prefix functions run build"
    ]
  }
}
